<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            AutomationId="HomePage"
            Title="HomePage"
            xmlns:local="clr-namespace:BasicAppiumSample"
            x:Class="BasicAppiumSample.HomePage">
    <TabbedPage.Children>
        <ContentPage Title="Tab 1"
                     AutomationId="Tab1">
            <VerticalStackLayout>
                <Label
                    AutomationId="lbFirst"
                    Text="Welcome to .NET MAUI!"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </ContentPage>
        <ContentPage Title="Tab 2"
                     AutomationId="Tab2">
            <VerticalStackLayout>
                <Label
                    AutomationId="lbSecond"
                    Text="Welcome to .NET MAUI!"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </ContentPage>
        <ContentPage Title="Tab 3"
                     AutomationId="Tab3"/>
    </TabbedPage.Children>
</TabbedPage>